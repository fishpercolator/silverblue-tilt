<%= form_with(model: book) do |form| %>
  <div class="field">
    <%= form.label :title, class: 'label' %>
    <div class="control">
      <%= form.text_field :title, class: "input #{book.errors[:title].any? && 'is-danger'}" %>
    </div>
    <% if book.errors[:title].any? %>
      <p class="help is-danger"><%= book.errors.messages[:title].join(', ') %></p>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :author, class: 'label' %>
    <div class="control">
      <%= form.text_field :author, class: "input #{book.errors[:author].any? && 'is-danger'}" %>
    </div>
    <% if book.errors[:author].any? %>
      <p class="help is-danger"><%= book.errors.messages[:author].join(', ') %></p>
    <% end %>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit class: 'button is-primary' %>
    </div>
  </div>
<% end %>
